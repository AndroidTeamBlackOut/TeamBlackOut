<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:windowBackground">@color/clear_background</item>
        <item name="android:actionBarStyle">@style/ToolbarTheme</item>
    </style>
    <style name="ToolbarTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/fab_download_icon</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_right</item>
    </style>
    <style name="AppThemeLight" parent="AppTheme">
        <item name="android:windowBackground">@color/solid_black</item>
        <item name="windowBackground">@color/solid_black</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="Platform.AppCompat" parent="@android:style/Theme.Wallpaper" tools:override="true">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme" tools:override="true">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
